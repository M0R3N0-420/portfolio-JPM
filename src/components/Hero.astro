---
import "../styles/global.css";

import Element_hero from "../assets/ELEMENT_HERO.png";
---

<div class="bg-[#FF9500] h-9/10">
  <div>
    <img
      class="absolute right-0 h-9/10"
      src="/src/assets/Hero_elements.svg"
      alt=""
    />
    <div class="absolute w-3/5 h-9/10">
      <img
        class="absolute bottom-0 right-0 mr-[-10rem] h-3/4"
        src="/src/assets/ImgJuanP.png"
        alt=""
      />
    </div>
  </div>

  <div
    class="bg-[#222222] h-full w-3/5 content-center pl-12 pb-12 text-white"
  >
    <div class=" p-6 w-134 [&>h2]:text-4xl">
      <h2 class="font-bold">Hello World!</h2>
      <h2>I'm Juan P. Moreno</h2>
      <img src="/src/assets/Line1.svg" alt="">
      <p>
        <span
          >I like to craft solid and scalable frontend products</span
        >
      </p> with great user experiences.
    </div>
  </div>
</div>
