---
import "../styles/global.css";

import Element_hero from "../assets/ELEMENT_HERO.png";
---

<div class="bg-orange-400 h-9/10 text-white">
  <div>
    <img
      class="absolute right-0 h-9/10"
      src="/src/assets/Hero_elements.svg"
      alt=""
    />
    <img
      class="absolute m-auto"
      src="/src/assets/ImgJuanP.svg"
      alt=""
    />
  </div>

  <div
    class="bg-stone-900 h-full w-3/5 flex inline-block content-center pl-12 [&>h2]:text-6xl"
  >
    <h2>Hello World!</h2>
    <h2>I'm Juan P. Moreno</h2>
    <p class="overline decoration-orange-400 decoration-4 mt-1">
      I like to craft solid and scalable frontend products with great user
      experiences.
    </p>
  </div>
</div>
